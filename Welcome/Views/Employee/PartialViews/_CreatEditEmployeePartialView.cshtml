@model EmployeeViewModel
@{
    var departments = new SelectList(ViewBag.Departments,"Id","Name");
}
<div>
    <label>Name</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>
</div>
<div>
    <label>Age</label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age"></span>
</div>
<div>
    <label>Address</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address"></span>
</div>
<div>
    <label>Salary</label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary"></span>
</div>
<div>
    <label>Email</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email"></span>
</div>

<div>
    <label>Hire Date</label>
    <input asp-for="HireDate" class="form-control" />
    <span asp-validation-for="HireDate"></span>
</div>
<div>
    <label>Phone</label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber"></span>
</div>
<div>
    <label class="col-form-label">Department</label>
    <select class="form-control" asp-for="DepartmentId" asp-items="departments">
        <option value="0">---Select Department---</option>

    </select>
</div>
<div>
    <label class="col-form-label">Image</label>
    <input class="form-control" asp-for="Image" />
</div>
