@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<div>
    <a asp-action="Create" class="btn btn-primary">Add Role</a>
</div>
<br />


<div class="card shadow mb-4 text-center">
    <div class="card-body">
        <div class="table-responsive">
            <table class="" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text text-center">Id</th>
                        <th class="text text-center">Role Name</th>
                        
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.RoleName</td>
                            <td><a asp-controller="Role" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-eye"></i></a></td>
                            <td><a asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a></td>
                            <td><a asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
                        </tr>
                    }
                </tbody>



            </table>
        </div>
    </div>
</div>