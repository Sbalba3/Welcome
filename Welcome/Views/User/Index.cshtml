@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>


<div class="card shadow mb-4 text-center">
    <div class="card-body">
        <div class="table-responsive">
            <table class="" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text text-center">Id</th>
                        <th class="text text-center">First Name</th>
                        <th class="text text-center">Last Name</th>
                        <th class="text text-center">Email</th>
                        <th class="text text-center">Phone Number</th>
                        <th class="text text-center">Rols</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FName</td>
                            <td>@item.LName</td>
                            <td>@Html.DisplayFor(M=>item.Email)</td>
                            <td>@item.PhoneNumber</td>
                            <td>@string.Join(" ",item.Roles)</td>

                            <td><a asp-controller="User" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-eye"></i></a></td>
                            <td><a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a></td>
                            <td><a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
                        </tr>


                    }


                </tbody>



            </table>
        </div>
    </div>
</div>